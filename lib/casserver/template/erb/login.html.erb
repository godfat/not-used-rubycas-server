<table id="login-box">
  <tr>
    <td colspan="2">
      <div id="headline-container">
        <strong><%= organization %></strong><%= _(" Central Login") %>
      </div>
    </td>
  </tr>
  <% if @message %>
  <tr>
    <td colspan="2" id="messagebox-container">
      <div class="messagebox <%= @message[:type] %>">
        <%= @message[:message] %>
      </div>
    </td>
  </tr>
  <% end %>
  <tr>
    <td id="logo-container">
      <img src="<%= self/'/themes/simple/logo.png' %>" id="logo"/>
    </td>
    <td id="login-form-container">
      <% @include_infoline = true %>
      <%= login_form %>
    </td>
  </tr>
</table>
